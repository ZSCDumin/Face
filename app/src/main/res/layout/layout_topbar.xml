<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl__parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y120"
    android:background="@color/colorMain">

    <TextView
        android:id="@+id/topBar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxEms="8"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/y42" />

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="@dimen/y170"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y76"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/press_back"
            android:visibility="gone" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_marginLeft="@dimen/x14"-->
        <!--android:text="返回"-->
        <!--android:textColor="@color/select_text_white"-->
        <!--android:textSize="@dimen/y38" />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topBar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_monitor"
            android:layout_width="@dimen/x33"
            android:layout_height="@dimen/x38"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/x38"
            android:layout_height="@dimen/x38"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="@dimen/y118"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/x30"
        android:text="添加"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/y38"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/y118"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/x30"
        android:text="删除"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/y38"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="@dimen/x33"
        android:layout_height="@dimen/x38"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x30"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

</RelativeLayout>
